<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-body">

          <form action="/links/emergenciaConfirmada" method="POST">
            <div class="form-group">

              <input name="y" type="text" id="y" value="" class="form-control" />
            </div>
            <div class="form-group">

              <input type="text" name="x" id="x" value="" class="form-control" />
            </div>
            <div class="form-group my-4">
              <button class="btn btn-danger btn-block vw-25 vh-25">
                EMERGENCIA
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</div>
<script
  async
  defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAxWdz83exuusrnnh43OkAtEVPQdQ4s1aE"
></script>
<script>

  function success(pos) { 
    const geo = { 
      latitud : pos.coords.latitude, 
      longitud : pos.coords.longitude, 
      }; 
  document.getElementById("x").value = geo.longitud;
  document.getElementById("y").value = geo.latitud; 
  }; 
  function error(err) {
  console.warn('ERROR(' + err.code + '): ' + err.message); };
  navigator.geolocation.getCurrentPosition(success, error, { enableHighAccuracy: true, timeout: 5000, maximumAge: 0 });

</script>